<Window x:Class="ProjektWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjektWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <Button x:Name="AddAppointmentButton"
                    Content="Dodaj wizytę"
                    FontSize="30"
                    Margin="5"
                    Click="AddAppointmentButton_Click"/>

            <Button x:Name="AddPetButton"
                    Content="Dodaj zwierzę"
                    FontSize="30"
                    Margin="5"
                    Click="AddPetButton_Click"/>
            
        </StackPanel>
    </Grid>
</Window>
